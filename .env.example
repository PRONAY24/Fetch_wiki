# =============================================================================
# Environment Variables for Wikipedia Search Agent
# Copy this file to .env and fill in your values
# =============================================================================

# =============================================================================
# LLM Provider Selection (choose one: groq, openai, google, ollama)
# =============================================================================
LLM_PROVIDER=groq

# =============================================================================
# Groq (RECOMMENDED - Free & Fastest)
# Get your free API key at: https://console.groq.com/keys
# =============================================================================
GROQ_API_KEY=your-groq-api-key-here
GROQ_MODEL=llama-3.3-70b-versatile
# Other models: llama-3.1-8b-instant, mixtral-8x7b-32768

# =============================================================================
# OpenAI (Paid)
# =============================================================================
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
# Other models: gpt-5-nano, gpt-4o

# =============================================================================
# Google Gemini (Paid, but has free tier)
# Get API key at: https://makersuite.google.com/app/apikey
# =============================================================================
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_MODEL=gemini-1.5-flash
# Other models: gemini-1.5-pro

# =============================================================================
# Ollama (Free - runs locally)
# Install: https://ollama.ai
# =============================================================================
OLLAMA_MODEL=llama3.2
OLLAMA_BASE_URL=http://localhost:11434

# =============================================================================
# Server Configuration
# =============================================================================
HOST=127.0.0.1
PORT=8000
LOG_LEVEL=INFO

# =============================================================================
# Redis Cache Configuration (Phase 1: Distributed Systems)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=3600  # Cache TTL in seconds (default: 1 hour)